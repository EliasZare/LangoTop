@page "{id}"
@model ServiceHost.Areas.Administration.Pages.Courses.Course.EditModel
@{
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ویرایش دوره @Model.Command.Title </h3>
            </div>
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.Title" class="control-label">عنوان</label>
                                    <input required="" type="text" class="form-control" asp-for="Command.Title" onchange="makeSlug('Name', 'Slug')">
                                    <span asp-validation-for="Command.Title" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PageTitle" class="control-label">عنوان صفحه</label>
                                    <input required="" type="text" class="form-control" asp-for="Command.PageTitle">
                                    <span asp-validation-for="Command.PageTitle" class="error"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.Slug" class="control-label">اسلاگ</label>
                                    <input type="text" class="form-control" asp-for="Command.Slug">
                                    <span asp-validation-for="Command.Slug" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.CategoryId" class="control-label">گروه محصول</label>
                                    <select class="form-control" asp-for="Command.CategoryId" asp-items='Model.CourseCategories'>
                                        <option value="0">گروه محصول</option>

                                    </select>
                                    <span asp-validation-for="Command.CategoryId" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.TeacherId" class="control-label">مدرس</label>
                                    <select class="form-control" asp-for="Command.TeacherId" asp-items='Model.Teachers'>
                                        <option value="0">انتخاب مدرس</option>
                                    </select>
                                    <span asp-validation-for="Command.TeacherId" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.Picture" class="control-label">عکس</label>
                                    <input type="file" class="form-control" asp-for="Command.Picture" accept="image/*">
                                    <span asp-validation-for="Command.Picture" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.PictureSmall" class="control-label">عکس کوچک</label>
                                    <input  type="file" class="form-control" asp-for="Command.PictureSmall" accept="image/*">
                                    <span asp-validation-for="Command.PictureSmall" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PictureAlt" class="control-label">Alt عکس</label>
                                    <input required="" type="text" class="form-control" asp-for="Command.PictureAlt">
                                    <span asp-validation-for="Command.PictureAlt" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Command.PictureTitle" class="control-label">عنوان عکس</label>
                                    <input required="" type="text" class="form-control" asp-for="Command.PictureTitle">
                                    <span asp-validation-for="Command.PictureTitle" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group no-margin">
                                    <label asp-for="Command.Description" class="control-label">توضیحات</label>
                                    <textarea class="form-control autogrow" asp-for="Command.Description" onchange="fillField('Description', 'MetaDescription')" style="height: 104px; overflow: hidden; resize: horizontal; word-wrap: break-word;"></textarea>
                                    <span asp-validation-for="Command.Description" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group no-margin">
                                    <label asp-for="Command.ShortDescription" class="control-label">توضیحات کوتاه</label>
                                    <textarea class="form-control autogrow" asp-for="Command.ShortDescription" style="height: 104px; overflow: hidden; resize: horizontal; word-wrap: break-word;"></textarea>
                                    <span asp-validation-for="Command.ShortDescription" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Command.Level" class="control-label">سطح</label>
                                    <select required="" class="form-control" asp-for="Command.Level">
                                        <option value="0">انتخاب سطح</option>
                                        <option value="مبتدی">مبتدی</option>
                                        <option value="متوسط">متوسط</option>
                                        <option value="پیشرفته">پیشرفته</option>
                                    </select>
                                    <span asp-validation-for="Command.Level" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Command.Price" class="control-label">قیمت |،در صورت 0 بودن مبلغ دوره رایگان منتشر می شود.</label>
                                    <input type="number" class="form-control" asp-for="Command.Price">
                                    <span asp-validation-for="Command.Price" class="error"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Command.Time" class="control-label">زمان</label>
                                    <input required="" type="text" class="form-control" asp-for="Command.Time">
                                    <span asp-validation-for="Command.Time" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.Keywords" class="control-label">کلمات کلیدی</label>
                                    <input required="" type="text" class="form-control" asp-for="Command.Keywords">
                                    <span asp-validation-for="Command.Keywords" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group no-margin">
                                    <label asp-for="Command.MetaDescription" class="control-label">توضیحات متا</label>
                                    <textarea required="" class="form-control autogrow" asp-for="Command.MetaDescription"
                                              style="height: 104px; overflow: hidden; resize: horizontal; word-wrap: break-word;"></textarea>
                                    <span asp-validation-for="Command.MetaDescription" class="error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Command.ShortLink" class="control-label">لینک کوتاه</label>
                                    <input required="" type="text" class="form-control" asp-for="Command.ShortLink">
                                    <span asp-validation-for="Command.ShortLink" class="error"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id" />
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success waves-effect waves-light m-b-5">ایجاد</button>
                        <a asp-page="./Index" class="btn btn-dark waves-effect waves-light m-b-5">بازگشت</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
