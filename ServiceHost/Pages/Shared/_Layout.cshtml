@using Microsoft.Extensions.Options
@using _0_Framework.Domain
@inject IOptions<GoogleReCaptchaConfig> _googleReCaptchaConfig
<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8" />
    <meta name="robots" content="index, follow">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link href="~/Theme/css/styles.css" rel="stylesheet" />
    <title>@ViewData["Title"] | لنگوتاپ</title>
    <link href="~/Theme/css/styles.css" rel="stylesheet">

    <!--meta tags-->
    <meta name="description" content="@ViewData["metaDescription"]">
    <meta name="author" content="@ViewData["author"]">
    <meta name="keywords" content="@ViewData["keywords"]" />


    <!--Open Graph meta tag-->
    <meta property="og:title" content="@ViewData["Title"] | لنگوتاپ" />
    <meta property="og:type" content="video_lecture" />
    <meta property="og:url" content="https://www.langotop.ir/@ViewData["Url"]" />
    <meta property="og:image" content="https://langotop.ir/@ViewData["Image"]" />
    <meta property="og:image:url" content="https://langotop.ir/@ViewData["Image"]">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="700">
    <meta property="og:image:height" content="500">
    <meta property="og:image:alt" content="@ViewData["Title"] | لنگوتاپ">
    <meta property="og:site_name" content="آموزش زبان انگلیسی | لنگوتاپ" />
    <meta property="og:description" content="@ViewData["metaDescription"]" />
    <meta property="og:locale" content="ir_FA">

    <!--Twitter meta tag-->
    <meta name="twitter:title" content="@ViewData["Title"] | لنگوتاپ">
    <meta name="twitter:description" content="@ViewData["metaDescription"]">
    <meta name="twitter:image" content="https://langotop.ir/@ViewData["Image"]">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@@langotop.ir" />
    <meta name="twitter:creator" content="لنگوتاپ" />


    <!-- Custom CSS -->

    @await RenderSectionAsync("Schema", required: false)

        <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-09TCVMR1HV"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-09TCVMR1HV');
    </script>
</head>

<body dir="rtl">

    <div id="main-wrapper">

        @await Component.InvokeAsync("Menu")

        @RenderBody()

        @await Component.InvokeAsync("Footer")


        <a id="back2Top" class="top-scroll" title="Back to top" href="#"><i class="ti-arrow-up"></i></a>

    </div>

    <script src="~/Theme/js/jquery.min.js"></script>
    <script src="~/AdminTheme/assets/js/jquery.todo.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Theme/js/popper.min.js"></script>
    <script src="~/Theme/js/bootstrap.min.js"></script>
    <script src="~/Theme/js/select2.min.js"></script>
    <script src="~/Theme/js/slick.js"></script>
    <script src="~/Theme/js/moment.min.js"></script>
    <script src="~/Theme/js/daterangepicker.js"></script>
    <script src="~/Theme/js/summernote.min.js"></script>
    <script src="~/Theme/js/metisMenu.min.js"></script>
    <script src="~/Theme/js/plugins.js"></script>
    <script src="~/Theme/js/custom.js"></script>
    <script src="~/Theme/js/customcart.js"></script>
    <script src="~/Theme/js/customcart.js"></script>
    @await RenderSectionAsync("Copy", false)
    @await RenderSectionAsync("Scripts", required: false)
    <script>
    grecaptcha.ready(function() {
        grecaptcha.execute('@_googleReCaptchaConfig.Value.Sitekey', { action: 'contact' }).then(function (token) {
            $("#captchaInput").val(token);
        });
    });
    </script>
    <script>
        $(document).ready(function () {
            updateCart();
        });
    </script>
</body>

</html>


